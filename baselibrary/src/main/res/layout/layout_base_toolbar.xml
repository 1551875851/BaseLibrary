<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:orientation="vertical">

    <View
        android:id="@+id/mStatusBar"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:minHeight="?actionBarSize">

        <LinearLayout
            android:id="@+id/mLayoutLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/mTitleTextView"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

        </LinearLayout>

        <!--   android:layout_toLeftOf="@id/mLayoutRight"
           android:layout_toRightOf="@+id/mLayoutLeft"-->
        <TextView
            android:id="@+id/mTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"

            android:ellipsize="end"
            android:gravity="center"
            android:minWidth="50dp"
            android:singleLine="true"
            android:textColor="#212121"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/mLayoutRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toLeftOf="@+id/mTitleTextView"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="10dp">

        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/mSplitLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#BBB"
        android:visibility="gone" />
</LinearLayout>
